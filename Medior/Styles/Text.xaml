<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="ThemeText" TargetType="TextBlock" BasedOn="{StaticResource MahApps.Styles.TextBlock}">
        <Setter Property="Foreground" Value="{DynamicResource MahApps.Brushes.Text}" />
    </Style>

    <Style x:Key="LargeTitle" TargetType="TextBlock" BasedOn="{StaticResource ThemeText}">
        <Setter Property="Margin" Value="0,0,0,12" />
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>

    <Style x:Key="MediumTitle" TargetType="TextBlock" BasedOn="{StaticResource ThemeText}">
        <Setter Property="Margin" Value="0,0,0,8" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontWeight" Value="SemiBold" />
    </Style>

    <Style x:Key="Paragraph" TargetType="TextBlock" BasedOn="{StaticResource ThemeText}">
        <Setter Property="Margin" Value="0,0,0,8" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>
</ResourceDictionary>